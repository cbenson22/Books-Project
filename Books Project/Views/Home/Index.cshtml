@model BooksViewModel
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">COLE'S BOOK STORE</span>
    </div>

@foreach (Book b in Model.Books)
{
    <h3 class="text-center">@b.Title</h3>
    <ul class="list-group">
        <li class="list-group-item list-group-item-primary">Author: @b.Author</li>
        <li class="list-group-item list-group-item-secondary">Publisher: @b.Publisher</li>
        <li class="list-group-item list-group-item-secondary">ISBN: @b.Isbn</li>
        <li class="list-group-item list-group-item-secondary">Classification: @b.Classification</li>
        <li class="list-group-item list-group-item-secondary">Category: @b.Category</li>
        <li class="list-group-item list-group-item-secondary">Number of Pages: @b.PageCount</li>
        <li class="list-group-item list-group-item-success">Price: @b.Price</li>
        
    </ul>
}

<div page-blah="@Model.PageInfo" page-action="Index" class="btn btn-group-lg"></div>
